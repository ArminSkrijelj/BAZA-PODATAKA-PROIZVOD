<Window x:Class="BAZA_PODATAKA_PROIZVOD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAZA_PODATAKA_PROIZVOD"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="5">
            <TextBlock Text="Naziv" FontSize="20"/>
            <TextBox x:Name="Naziv"
                     Margin="5"
                     Text="{Binding Proizvod.Naziv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Jedinica mere" FontSize="20" />
            <TextBox x:Name="JedinicaMere"
                     Margin="5"
                     Text="{Binding Proizvod.JedinicaMere, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Opis" FontSize="20"/>
            <TextBox x:Name="Opis"
                     Margin="5"
                     Text="{Binding Proizvod.Opis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="10">
            <StackPanel Margin="5">
                <Button Content="ADD" Margin="5" Width="200" FontSize="20" Click="Button_Click"/>
                <Button Content="LOAD" Width="200" FontSize="20" Click="Button_Click_1"/>
            </StackPanel>

            <StackPanel Margin="5">
                <Button Content="DELETE" Margin="5" Width="200" FontSize="20" Click="Button_Click_2"/>
                <Button Content="UPDATE" Width="200" FontSize="20" Click="Button_Click_3"/>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="dgProizvodi"
                  Grid.Row="2"
                  ItemsSource="{Binding Proizvodi}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Binding="{Binding ID_Proizvoda}" Header="ID Proizvoda"/>
                <DataGridTextColumn Width="*" Binding="{Binding Naziv}" Header="Naziv"/>
                <DataGridTextColumn Width="*" Binding="{Binding JedinicaMere}" Header="Jedinica mere"/>
                <DataGridTextColumn Width="*" Binding="{Binding Opis}" Header="Opis"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
